<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bws.musclefood">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo3"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo3"
        android:supportsRtl="true"
        android:theme="@style/Theme.MuscleFood">
        <activity android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".signup.SignUpActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".login.LoginActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".itemcategory.ItemCategotyActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".itemcategory.subcategory.SubCategoryActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".itemcategory.productlist.ProductListActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".itemcategory.cartlist.CartListActivity"
            android:screenOrientation="portrait"></activity>


        <activity android:name=".delivery.choosedeliveryaddress.ChooseDeliveryAddressActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".delivery.deliveryoption.DeliveryOptionActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".delivery.AddNewAddressActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".payment.PaymentActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".profile.MyProfileActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".orders.OrderActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".itemcategory.basket.BasketsActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".orders.SearchOrderActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".enotes.EnotesActivity"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".itemcategory.rating.RatingActivity"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".favourites.FavouritesActivity"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".profile.ContactPreferenceActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".productdetails.ProductDetailsActivity"
            android:screenOrientation="portrait"></activity>

    </application>

</manifest>