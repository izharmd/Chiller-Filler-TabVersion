<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/tool_bar_address"></include>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/order_numbers_24"
        android:drawablePadding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center|left"
        android:paddingLeft="@dimen/_5sdp"
        android:text="Order Number:"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:paddingLeft="@dimen/_3sdp"
        android:background="@drawable/round_profile_view">

    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:text="OR"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"></TextView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/first_name_24"
        android:drawablePadding="@dimen/_5sdp"
        android:gravity="center|left"
        android:paddingLeft="@dimen/_5sdp"
        android:text="Customer Ref:"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"></TextView>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:paddingLeft="@dimen/_3sdp"
        android:background="@drawable/round_profile_view">

    </EditText>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSearchOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/rippal_cardview"
        android:text="Search"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:textStyle="normal"/>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="193dp"
        android:layout_height="76dp"
        android:src="@drawable/logo3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.848"></ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>