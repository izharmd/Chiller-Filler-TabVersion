<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:background="@drawable/border_in_bottom"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imvBack"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_weight=".08"
        android:paddingLeft="@dimen/_5sdp"

        android:src="@drawable/back_24">

    </ImageView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_weight=".8"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/logo3">

        </TextView>

        <TextView
            android:id="@+id/txtTxtHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_login_signup"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Add New Address"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />


    </LinearLayout>


    <ImageView
        android:id="@+id/imvSaveaddress"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_weight=".1"
        app:srcCompat="@drawable/check_24" />

</LinearLayout>