<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_address"></include>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_1sdp"
                    app:animatedTextSize="@dimen/_10sdp"
                    app:borderColor="@color/black"
                    app:borderWidth=".1dp"
                    app:cornerRadius="@dimen/_2sdp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:drawablePadding="@dimen/_5sdp"
                        android:hint="House no"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/_12sdp" />


                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


            </LinearLayout>

            <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:animatedTextSize="@dimen/_10sdp"
                app:borderColor="@color/black"
                app:borderWidth=".1dp"
                app:cornerRadius="@dimen/_2sdp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:drawablePadding="@dimen/_5sdp"
                    android:hint="Address Line 1"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp" />


            </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


            <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:animatedTextSize="@dimen/_10sdp"
                app:borderColor="@color/black"
                app:borderWidth=".1dp"
                app:cornerRadius="@dimen/_2sdp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:drawablePadding="@dimen/_5sdp"
                    android:hint="Address Line 2"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp" />


            </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_1sdp"
                    app:animatedTextSize="@dimen/_10sdp"
                    app:borderColor="@color/black"
                    app:borderWidth=".1dp"
                    app:cornerRadius="@dimen/_2sdp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:drawablePadding="@dimen/_5sdp"
                        android:hint="City"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/_12sdp"></EditText>


                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    app:animatedTextSize="@dimen/_10sdp"
                    app:borderColor="@color/black"
                    app:borderWidth=".1dp"
                    app:cornerRadius="@dimen/_2sdp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:drawableLeft="@drawable/star_mark_14"
                        android:drawablePadding="@dimen/_5sdp"
                        android:hint="Zipcode"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/_12sdp"></EditText>


                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txtHome"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/round_address"
                    android:gravity="center"
                    android:text="Home"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"></TextView>


                <TextView
                    android:id="@+id/txtOffice"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/round_address"
                    android:gravity="center"
                    android:text="Office"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"></TextView>


                <TextView
                    android:id="@+id/txtOthers"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center|right"
                    android:layout_weight="1"
                    android:background="@drawable/round_address"
                    android:gravity="center"
                    android:text="Other"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"></TextView>


            </LinearLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:backgroundTint="@color/black"
                android:buttonTint="@color/black"
                android:text="Make this as my default address"
                android:textSize="@dimen/_12sdp"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>