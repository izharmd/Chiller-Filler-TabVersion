<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_address"></include>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edtHouseNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/round_payment_view"
                android:hint="House no"
                android:paddingLeft="@dimen/_5sdp"

                android:textSize="@dimen/_12sdp" />


            <EditText
                android:id="@+id/edtAddressLine1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/round_payment_view"
                android:hint="Address Line 1"
                android:paddingLeft="@dimen/_5sdp"

                android:textSize="@dimen/_12sdp" />


            <EditText
                android:id="@+id/edtAddressLine2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/round_payment_view"
                android:hint="Address Line 2"
                android:paddingLeft="@dimen/_5sdp"

                android:textSize="@dimen/_12sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="2">


                <EditText
                    android:id="@+id/edtCity"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/round_payment_view"
                    android:hint="City"
                    android:paddingLeft="@dimen/_5sdp"

                    android:textSize="@dimen/_12sdp" />


                <EditText
                    android:id="@+id/edtZipCode"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/round_payment_view"
                    android:drawablePadding="@dimen/_5sdp"
                    android:hint="Zipcode"
                    android:paddingLeft="@dimen/_5sdp"

                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txtHome"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/round_address"
                    android:gravity="center"
                    android:text="Home"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"></TextView>


                <TextView
                    android:id="@+id/txtOffice"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/round_address"
                    android:gravity="center"
                    android:text="Office"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"></TextView>


                <TextView
                    android:id="@+id/txtOthers"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center|right"
                    android:layout_weight="1"
                    android:background="@drawable/round_address"
                    android:gravity="center"
                    android:text="Other"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"></TextView>


            </LinearLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:backgroundTint="@color/black"
                android:buttonTint="@color/black"
                android:text="Make this as my default address"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>