<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_address"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:background="@color/light_gray"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SAVED ADDRESS "
            android:layout_gravity="center"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:paddingLeft="@dimen/_10sdp"></TextView>

        <TextView
            android:id="@+id/txtAddNewAddress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ADD NEW ADDRESS "
            android:layout_gravity="center"
           android:gravity="center"
            android:paddingRight="@dimen/_10sdp"
            android:textColor="@color/yellow"
            android:drawableLeft="@drawable/add_new_address_12"
            android:textStyle="bold"
            android:paddingLeft="@dimen/_30sdp"></TextView>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>